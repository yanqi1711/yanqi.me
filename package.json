    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "globals": "^15.15.0",
    "hastscript": "^9.0.1",
    "html-entities": "^2.6.0",
    "lint-staged": "^15.5.2",
    "mdast-util-directive": "^3.1.0",
    "mdast-util-to-string": "^4.0.0",
    "medium-zoom": "^1.1.0",
    "p5": "^1.11.9",
