    "remark-imgattr": "^1.0.5",
    "remark-math": "^6.0.0",
    "satori": "^0.11.3",
    "satori-html": "^0.3.2",
    "sharp": "^0.33.5",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "unist-util-visit": "^5.0.0",
    "unocss": "^0.63.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
