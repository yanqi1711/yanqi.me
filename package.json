    "prepare": "simple-git-hooks",
    "postbuild": "pagefind --site dist && del-cli \"dist/pagefind/*ui*\""
  },
  "dependencies": {
    "astro": "4.16.8",
    "nprogress": "^0.2.0"
  },
  "devDependencies": {
