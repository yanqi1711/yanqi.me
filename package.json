    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.2",
    "@eslint/js": "^9.33.0",
    "@expressive-code/plugin-collapsible-sections": "^0.38.3",
    "@expressive-code/plugin-line-numbers": "^0.38.3",
    "@iconify-json/material-symbols": "^1.2.32",
    "@iconify/json": "^2.2.373",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.17.1",
    "@types/nprogress": "^0.2.3",
